<div id="<%= dom_id result %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= result.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= result.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this result", result, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this result", edit_result_path(result), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
