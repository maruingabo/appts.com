<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= link_to @booking.que_number, booking_path(@booking) if @booking.que_number %>
  </th>
  <td class="px-6 py-4">
    <%= link_to @booking.customer_name, booking_path(@booking) %>
  </td>
  <td class="px-6 py-4 relative"  data-action="mouseenter->popover#show mouseleave->popover#hide"  data-controller="popover" data-popover-url-value="<%= card_booking_path(@booking) %>">
    <%= link_to @booking.service_offers&.count, booking_path(@booking)%>
  </td>
  <td class="px-6 py-4">
    <%= link_to formatted_price(@booking.total_to_pay), booking_path(@booking) %>
  </td>
  <td class="px-6 py-4">
     <%= form_for @booking do |f|%>
      <%= f.select :status, options_for_select(Booking::STATUSES), {}, class: 'block w-full p-1 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', onchange: 'this.form.requestSubmit();' %>
    <% end %>
    <%#= link_to @booking.status&.upcase, booking_path(@booking) %>
  </td>
</tr>