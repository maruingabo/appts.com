 <div data-popover-target="card" id="card" role="" class="absolute top-5 left-10 inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800 z-100">
    <div class="px-3 py-2 bg-gray-100 border-b border-gray-200 rounded-t-lg dark:border-gray-600 dark:bg-gray-700">
        <h3 class="font-semibold text-gray-900 dark:text-white">Services Booked</h3>
    </div>
    <div class="px-3 py-2">
      <ul>
        <% if !booking.service_offers.blank? %>
          <% booking&.service_offers&.each do |service_offer|%>
          <li>
              <%= service_offer.name %>
          </li>
          <% end %>
        <% else %>
          <li>No services booked</li>
        <% end %>
      </ul>
    </div>
</div>